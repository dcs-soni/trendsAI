generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  username  String
  role      Role     @default(USER)
  votes     Vote[]
}

model AIApp {
  id          String   @id @default(cuid())
  name        String   @unique
  createdAt   DateTime @default(now())
  category    String
  description String
  imageUrl    String
  websiteUrl  String
  votes       Vote[]
}

model AIModel {
  id          String   @id @default(cuid())
  name        String   @unique
  createdAt   DateTime @default(now())
  category    String
  description String
  imageUrl    String
  websiteUrl  String
  votes       Vote[]
}

model Vote {
  id        String   @id @default(cuid())
  userId    String
  isLiked   Boolean  @default(false)
  createdAt DateTime @default(now())
  aiAppId   String?
  aiModelId String?
  aiApp     AIApp?   @relation(fields: [aiAppId], references: [id])
  aiModel   AIModel? @relation(fields: [aiModelId], references: [id])
  username  User     @relation(fields: [userId], references: [id])

  @@unique([userId, aiAppId])
  @@unique([userId, aiModelId])
}

enum Role {
  USER
  ADMIN
}
